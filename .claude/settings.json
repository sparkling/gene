{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_INPUT_file_path\" ] && npx @claude-flow/cli@latest hooks pre-edit --file \"$TOOL_INPUT_file_path\" 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Bash$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_INPUT_command\" ] && npx @claude-flow/cli@latest hooks pre-command --command \"$TOOL_INPUT_command\" 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Task$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_INPUT_prompt\" ] && npx @claude-flow/cli@latest hooks pre-task --task-id \"task-$(date +%s)\" --description \"$TOOL_INPUT_prompt\" 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_INPUT_file_path\" ] && npx @claude-flow/cli@latest hooks post-edit --file \"$TOOL_INPUT_file_path\" --success \"${TOOL_SUCCESS:-true}\" --learn --store-pattern 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Bash$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_INPUT_command\" ] && npx @claude-flow/cli@latest hooks post-command --command \"$TOOL_INPUT_command\" --success \"${TOOL_SUCCESS:-true}\" --learn 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Task$",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$TOOL_RESULT_agent_id\" ] && npx @claude-flow/cli@latest hooks post-task --task-id \"$TOOL_RESULT_agent_id\" --success \"${TOOL_SUCCESS:-true}\" --learn --store-pattern 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^(Read|Glob|Grep)$",
        "hooks": [
          {
            "type": "command",
            "command": "npx @claude-flow/cli@latest hooks post-command --command \"search\" --success \"${TOOL_SUCCESS:-true}\" --learn 2>/dev/null || true",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "case \"$PROMPT\" in '/sl') .claude/sl.sh list;; '/sl n'|'/sl next') .claude/sl.sh n;; '/sl p'|'/sl prev') .claude/sl.sh p;; '/sl '*) .claude/sl.sh \"${PROMPT#/sl }\";; *) [ -n \"$PROMPT\" ] && npx @claude-flow/cli@latest hooks route --task \"$PROMPT\" || true;; esac",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx @claude-flow/cli@latest daemon start --quiet 2>/dev/null || true",
            "timeout": 5000,
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "[ -n \"$SESSION_ID\" ] && npx @claude-flow/cli@latest hooks session-restore --session-id \"$SESSION_ID\" 2>/dev/null || true",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx @claude-flow/cli@latest hooks session-end --save-state --export-metrics --consolidate 2>/dev/null || true",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$NOTIFICATION_MESSAGE\" ] && npx @claude-flow/cli@latest memory store --namespace notifications --key \"notify-$(date +%s)\" --value \"$NOTIFICATION_MESSAGE\" 2>/dev/null || true",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/statusline.sh 2>/dev/null || npx @claude-flow/cli@latest hooks statusline 2>/dev/null || echo \"â–Š Claude Flow V3\"",
    "refreshMs": 5000,
    "enabled": true,
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(npx claude-flow:*)",
      "Bash(npx @claude-flow/cli:*)",
      "mcp__claude-flow__:*"
    ],
    "deny": []
  },
  "claudeFlow": {
    "version": "3.0.0",
    "enabled": true,
    "modelPreferences": {
      "default": "claude-opus-4-5-20251101",
      "routing": "claude-3-5-haiku-20241022"
    },
    "swarm": {
      "topology": "hierarchical-mesh",
      "maxAgents": 50,
      "threadPool": 30,
      "autoScale": true,
      "coordinationStrategy": "consensus"
    },
    "memory": {
      "backend": "ruvector-unified",
      "storagePath": ".vectordb/unified.db",
      "enableHNSW": true,
      "hnsw": {
        "M": 48,
        "efConstruction": 400,
        "efSearch": 200
      },
      "quantization": "scalar",
      "persistence": {
        "autoPersist": true,
        "persistInterval": 10000,
        "walMode": true
      },
      "cacheSize": 10000,
      "maxEntries": 100000000
    },
    "neural": {
      "enabled": true
    },
    "daemon": {
      "autoStart": true,
      "workers": [
        "map",
        "audit",
        "optimize",
        "consolidate",
        "testgaps",
        "ultralearn",
        "deepdive",
        "document",
        "refactor",
        "benchmark"
      ],
      "schedules": {
        "audit": {
          "interval": "1h",
          "priority": "critical"
        },
        "optimize": {
          "interval": "30m",
          "priority": "high"
        },
        "consolidate": {
          "interval": "2h",
          "priority": "low"
        },
        "document": {
          "interval": "1h",
          "priority": "normal",
          "triggers": [
            "adr-update",
            "api-change"
          ]
        },
        "deepdive": {
          "interval": "4h",
          "priority": "normal",
          "triggers": [
            "complex-change"
          ]
        },
        "ultralearn": {
          "interval": "1h",
          "priority": "normal"
        }
      }
    },
    "learning": {
      "enabled": true,
      "autoTrain": true,
      "autoStore": true,
      "storeOnSuccess": true,
      "patterns": [
        "coordination",
        "optimization",
        "prediction",
        "code-patterns",
        "file-associations",
        "command-sequences",
        "error-solutions",
        "architecture-decisions"
      ],
      "retention": {
        "shortTerm": "24h",
        "longTerm": "90d"
      }
    },
    "ruvector": {
      "enabled": true,
      "autoIndex": true,
      "persistHNSW": true,
      "sona": {
        "enabled": true,
        "autoLearn": true,
        "trajectoryTracking": true,
        "adaptationThreshold": 0.05
      },
      "moe": {
        "enabled": true,
        "experts": 8,
        "autoRoute": true
      },
      "ewc": {
        "enabled": true,
        "autoConsolidate": true,
        "consolidationInterval": "1h"
      },
      "flash": {
        "enabled": true,
        "blockSize": 64
      },
      "lora": {
        "enabled": true,
        "rank": 8,
        "alpha": 16
      },
      "storage": {
        "storagePath": ".vectordb/unified.db",
        "autoSave": true,
        "saveInterval": 10000,
        "walMode": true
      },
      "namespaces": {
        "user-data": "user:",
        "graph-entities": "graph:",
        "project-activity": "proj:",
        "learning-patterns": "learn:",
        "embeddings-cache": "emb:"
      }
    },
    "adr": {
      "autoGenerate": true,
      "directory": "/docs/adr",
      "template": "madr"
    },
    "ddd": {
      "trackDomains": true,
      "validateBoundedContexts": true,
      "directory": "/docs/ddd"
    },
    "security": {
      "autoScan": true,
      "scanOnEdit": true,
      "cveCheck": true,
      "threatModel": true
    }
  }
}