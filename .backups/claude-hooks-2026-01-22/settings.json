{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-edit.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Bash$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-command.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Task$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-task.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Bash$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-command.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^Task$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-task.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^(Read|Glob|Grep)$",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-search.sh",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/user-prompt.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-start.sh",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/stop.sh",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-end.sh",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/statusline.sh 2>/dev/null || npx @claude-flow/cli@latest hooks statusline 2>/dev/null || echo \"â–Š Claude Flow V3\"",
    "refreshMs": 5000,
    "enabled": true,
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(npx claude-flow:*)",
      "Bash(npx @claude-flow/cli:*)",
      "mcp__claude-flow__:*"
    ],
    "deny": []
  },
  "claudeFlow": {
    "version": "3.0.0",
    "enabled": true,
    "modelPreferences": {
      "default": "claude-opus-4-5-20251101",
      "routing": "claude-3-5-haiku-20241022"
    },
    "swarm": {
      "topology": "hierarchical-mesh",
      "maxAgents": 50,
      "threadPool": 30,
      "autoScale": true,
      "coordinationStrategy": "consensus"
    },
    "memory": {
      "backend": "hybrid",
      "storagePath": ".swarm/memory.db",
      "enableHNSW": true,
      "hnsw": {
        "M": 48,
        "efConstruction": 400,
        "efSearch": 200,
        "dimensions": 768
      },
      "quantization": "none",
      "persistence": {
        "autoPersist": true,
        "persistInterval": 5000,
        "walMode": true
      },
      "cacheSize": 50000,
      "maxEntries": 10000000
    },
    "neural": {
      "enabled": true
    },
    "daemon": {
      "autoStart": true,
      "workers": [
        "map",
        "audit",
        "optimize",
        "consolidate",
        "testgaps",
        "ultralearn",
        "deepdive",
        "document",
        "refactor",
        "benchmark"
      ],
      "schedules": {
        "audit": {
          "interval": "1h",
          "priority": "critical"
        },
        "optimize": {
          "interval": "30m",
          "priority": "high"
        },
        "consolidate": {
          "interval": "2h",
          "priority": "low"
        },
        "document": {
          "interval": "1h",
          "priority": "normal",
          "triggers": [
            "adr-update",
            "api-change"
          ]
        },
        "deepdive": {
          "interval": "4h",
          "priority": "normal",
          "triggers": [
            "complex-change"
          ]
        },
        "ultralearn": {
          "interval": "1h",
          "priority": "normal"
        }
      }
    },
    "learning": {
      "enabled": true,
      "autoTrain": true,
      "autoStore": true,
      "storeOnSuccess": true,
      "patterns": [
        "coordination",
        "optimization",
        "prediction",
        "code-patterns",
        "file-associations",
        "command-sequences",
        "error-solutions",
        "architecture-decisions"
      ],
      "retention": {
        "shortTerm": "24h",
        "longTerm": "90d"
      }
    },
    "ruvector": {
      "enabled": true,
      "autoIndex": true,
      "persistHNSW": true,
      "sona": {
        "enabled": true,
        "autoLearn": true,
        "trajectoryTracking": true,
        "adaptationThreshold": 0.05
      },
      "moe": {
        "enabled": true,
        "experts": 8,
        "autoRoute": true
      },
      "ewc": {
        "enabled": true,
        "autoConsolidate": true,
        "consolidationInterval": "1h"
      },
      "flash": {
        "enabled": true,
        "blockSize": 64
      },
      "lora": {
        "enabled": true,
        "rank": 8,
        "alpha": 16
      },
      "storage": {
        "storagePath": ".swarm/memory.db",
        "autoSave": true,
        "saveInterval": 5000,
        "walMode": true
      },
      "namespaces": {
        "user-data": "user:",
        "graph-entities": "graph:",
        "project-activity": "proj:",
        "learning-patterns": "learn:",
        "embeddings-cache": "emb:"
      }
    },
    "adr": {
      "autoGenerate": true,
      "directory": "/docs/adr",
      "template": "madr"
    },
    "ddd": {
      "trackDomains": true,
      "validateBoundedContexts": true,
      "directory": "/docs/ddd"
    },
    "security": {
      "autoScan": true,
      "scanOnEdit": true,
      "cveCheck": true,
      "threatModel": true
    }
  }
}