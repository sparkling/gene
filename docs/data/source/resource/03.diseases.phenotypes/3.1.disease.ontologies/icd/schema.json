{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "icd-schema.json",
  "title": "International Classification of Diseases (ICD) Code Record",
  "description": "JSON Schema for ICD classification codes. WHO global standard for diagnostic health information with ~70,000 ICD-10 codes and ~80,000 ICD-11 entities across 194 countries.",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "description": "ICD code",
      "oneOf": [
        {
          "pattern": "^[A-Z][0-9]{2}(\\.[0-9]{1,4})?$",
          "description": "ICD-10-CM format (e.g., E11.9)"
        },
        {
          "pattern": "^[A-Z][0-9]{2}(\\.[0-9])?$",
          "description": "ICD-10 format (e.g., I21.0)"
        },
        {
          "pattern": "^[A-Z0-9]{4,6}$",
          "description": "ICD-11 format (e.g., 5A11)"
        }
      ],
      "examples": ["E11.9", "I21.0", "5A11"]
    },
    "version": {
      "type": "string",
      "description": "ICD version",
      "enum": ["ICD-10", "ICD-10-CM", "ICD-10-PCS", "ICD-11"]
    },
    "title": {
      "type": "string",
      "description": "Disease or condition name",
      "minLength": 1
    },
    "long_title": {
      "type": "string",
      "description": "Full descriptive title"
    },
    "chapter": {
      "type": "object",
      "description": "ICD chapter information",
      "properties": {
        "code": {
          "type": "string",
          "description": "Chapter code"
        },
        "title": {
          "type": "string",
          "description": "Chapter title"
        }
      }
    },
    "block": {
      "type": "object",
      "description": "ICD block (category range)",
      "properties": {
        "code": {
          "type": "string",
          "description": "Block code range (e.g., E10-E14)",
          "pattern": "^[A-Z][0-9]{2}-[A-Z][0-9]{2}$"
        },
        "title": {
          "type": "string",
          "description": "Block title"
        }
      }
    },
    "parent_code": {
      "type": "string",
      "description": "Parent category code"
    },
    "children": {
      "type": "array",
      "description": "Child codes",
      "items": {
        "type": "string"
      }
    },
    "includes": {
      "type": "array",
      "description": "Inclusion terms",
      "items": {
        "type": "string"
      }
    },
    "excludes1": {
      "type": "array",
      "description": "Excludes1 notes (mutually exclusive)",
      "items": {
        "type": "string"
      }
    },
    "excludes2": {
      "type": "array",
      "description": "Excludes2 notes (not mutually exclusive)",
      "items": {
        "type": "string"
      }
    },
    "is_billable": {
      "type": "boolean",
      "description": "Whether code is valid for billing (ICD-10-CM)"
    }
  },
  "required": ["code", "version", "title"],
  "additionalProperties": false
}
