{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "alphamissense-schema.json",
  "title": "AlphaMissense Prediction Record",
  "description": "JSON Schema for AlphaMissense pathogenicity predictions for missense variants using deep learning.",
  "type": "object",
  "properties": {
    "CHROM": {
      "type": "string",
      "description": "Chromosome identifier.",
      "enum": ["chr1", "chr2", "chr3", "chr4", "chr5", "chr6", "chr7", "chr8", "chr9", "chr10", "chr11", "chr12", "chr13", "chr14", "chr15", "chr16", "chr17", "chr18", "chr19", "chr20", "chr21", "chr22", "chrX", "chrY", "chrM"]
    },
    "POS": {
      "type": "integer",
      "description": "1-based genomic position (GRCh38).",
      "examples": [69094, 11072534]
    },
    "REF": {
      "type": "string",
      "description": "Reference allele.",
      "pattern": "^[ACGT]+$",
      "examples": ["A", "C", "G", "T"]
    },
    "ALT": {
      "type": "string",
      "description": "Alternate allele.",
      "pattern": "^[ACGT]+$",
      "examples": ["G", "T", "A", "C"]
    },
    "genome": {
      "type": "string",
      "description": "Reference genome assembly.",
      "const": "hg38"
    },
    "uniprot_id": {
      "type": "string",
      "description": "UniProt accession identifier.",
      "pattern": "^[OPQ][0-9][A-Z0-9]{3}[0-9]|[A-NR-Z][0-9]([A-Z][A-Z0-9]{2}[0-9]){1,2}$",
      "examples": ["P04637", "Q9NR56"]
    },
    "transcript_id": {
      "type": "string",
      "description": "Ensembl transcript identifier.",
      "pattern": "^ENST[0-9]{11}$",
      "examples": ["ENST00000269305", "ENST00000357654"]
    },
    "protein_variant": {
      "type": "string",
      "description": "Protein variant in single-letter amino acid notation.",
      "pattern": "^[ACDEFGHIKLMNPQRSTVWY][0-9]+[ACDEFGHIKLMNPQRSTVWY]$",
      "examples": ["R248Q", "V600E", "G12D"]
    },
    "am_pathogenicity": {
      "type": "number",
      "description": "AlphaMissense pathogenicity score (0-1, higher = more pathogenic).",
      "minimum": 0,
      "maximum": 1,
      "examples": [0.9876, 0.1234, 0.5432]
    },
    "am_class": {
      "type": "string",
      "description": "Predicted pathogenicity classification.",
      "enum": ["likely_pathogenic", "likely_benign", "ambiguous"]
    },
    "gene_symbol": {
      "type": "string",
      "description": "HGNC gene symbol.",
      "examples": ["TP53", "BRAF", "KRAS"]
    },
    "gene_id": {
      "type": "string",
      "description": "Ensembl gene identifier.",
      "pattern": "^ENSG[0-9]{11}$",
      "examples": ["ENSG00000141510", "ENSG00000157764"]
    },
    "protein_position": {
      "type": "integer",
      "description": "Position in the protein sequence (1-based).",
      "examples": [248, 600, 12]
    },
    "ref_aa": {
      "type": "string",
      "description": "Reference amino acid (single letter).",
      "pattern": "^[ACDEFGHIKLMNPQRSTVWY]$",
      "examples": ["R", "V", "G"]
    },
    "alt_aa": {
      "type": "string",
      "description": "Alternate amino acid (single letter).",
      "pattern": "^[ACDEFGHIKLMNPQRSTVWY]$",
      "examples": ["Q", "E", "D"]
    },
    "sift_score": {
      "type": "number",
      "description": "SIFT score if available (lower = more damaging).",
      "minimum": 0,
      "maximum": 1
    },
    "polyphen2_score": {
      "type": "number",
      "description": "PolyPhen-2 score if available (higher = more damaging).",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": ["CHROM", "POS", "REF", "ALT", "am_pathogenicity", "am_class"],
  "additionalProperties": true
}
