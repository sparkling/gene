{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": [
        "@claude-flow/cli@latest",
        "mcp",
        "start"
      ],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "24",
        "CLAUDE_FLOW_MEMORY_BACKEND": "ruvector",
        "RUVECTOR_BRIDGE_ENABLED": "true"
      },
      "autoStart": false
    },
    "ruvector": {
      "command": "npx",
      "args": [
        "ruvector",
        "mcp",
        "start"
      ],
      "env": {
        "RUVECTOR_INTELLIGENCE_ENABLED": "true",
        "RUVECTOR_MULTI_ALGORITHM": "true",
        "RUVECTOR_NATIVE_WORKERS": "true",
        "RUVECTOR_FLASH_ATTENTION": "true",
        "RUVECTOR_SONA_ENABLED": "true",
        "RUVECTOR_GNN_ENABLED": "true",
        "RUVECTOR_TENSOR_COMPRESS": "true",
        "RUVECTOR_CACHE_SIZE_MB": "8192"
      },
      "autoStart": true
    }
  }
}